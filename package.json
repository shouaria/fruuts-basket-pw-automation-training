{
  "name": "fruuts-basket-pw-automation-training",
  "version": "1.0.0",
  "description": "A small training repository for people to learn playwright while using a custom Gherkin solution",
  "main": "index.js",
  "scripts": {    
    "lint": "node_modules/.bin/eslint './e2e/**/*.{js,ts,tsx}' './e2e/**/*.*.{js,ts,tsx}' --ext .js,.jsx,.ts,.tsx",
    "lint-fix": "node_modules/.bin/eslint './e2e/**/*.{js,ts,tsx}' './e2e/**/*.*.{js,ts,tsx}' --ext .js,.jsx,.ts,.tsx --fix",
    "format": "node_modules/.bin/prettier --check './e2e/**/*.{js,ts,tsx}' './e2e/**/*.*.{js,ts,tsx}'",
    "format-fix": "node_modules/.bin/prettier --write './e2e/**/*.{js,ts,tsx}' './e2e/**/*.*.{js,ts,tsx}'",
    "prepare": "husky install",
    "test:all": "npx playwright test",
    "tag": "npx playwright test --headed --grep",
    "report": "npx playwright show-report"},
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@playwright/test": "^1.46.1"
  },
  "devDependencies": {
    "@types/node": "^22.5.3",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-playwright": "^0.12.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "prettier": "^3.2.5"
  }
}
